		// TODO Auto-generated method stub
		int arr[] = {1,2,5,3,9,7,12,4};
		Arrays.sort(arr);
		System.out.println(arr);

	    int num = missigNumber(arr);
		
	}

	private static int missigNumber(int[] arr) {
		int size = arr.length;
		Arrays.sort(arr);
		int sum = size*(size+1)/2
		return 0;
	}

}
